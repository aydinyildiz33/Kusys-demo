@model KUSYS_Demo.Models.Student


<div class="mt-4">

    <div class="bg-success text-white p-4">
        <div class="col">@(Model.FirstName + Model.LastName)'s Courses</div>
    </div>

    <form asp-action="EditStudent" method="post">

        <input type="hidden" asp-for="StudentId" />

        <div class="row">

            <div class="col-9 m-3">

                @foreach (Course course in ViewBag.Courses)
                {
                    <div class="form-row">

                        <div class="form-group col-4">
                            <label class="form-control-plaintext">
                                @course.CourseId
                            </label>
                        </div>

                        <div class="form-group col-4">
                            <label class="form-control-plaintext">
                                @course.CourseName
                            </label>
                        </div>

                        <div class="form-group col-4">
                            @if (course.studentCourses.Any(i => i.StudentId == Model.StudentId))
                            {
                                <input type="checkbox" name="courseid" value="@course.Id" checked>
                            }
                            else
                            {
                                <input type="checkbox" name="courseid" value="@course.Id">
                            }
                        </div>

                    </div>
                }

                <input type="submit" class="btn btn-primary" value="Submit" />

            </div>

        </div>

    </form>

</div>
